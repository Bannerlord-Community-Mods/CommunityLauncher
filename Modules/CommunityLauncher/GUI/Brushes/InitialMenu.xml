<Brushes>
  <Brush Name="InitialMenuButtonBrush" FontColor="#FFFFFFFF">
    <Animations>
      <Animation Name="FontHoverAnimation">
      </Animation>
      <Animation Name="FontPressedAnimation">
      </Animation>
      <Animation Name="FontDefaultAnimation">
      </Animation>
    </Animations>
    <Layers>
      <BrushLayer Name="Default" Color="#FFFFFFFF" />
      <BrushLayer Name="HoverLayer" Color="#FFFF00FF" />
    </Layers>
    <Styles>
      <Style Name="Default" FontColor="#FFFFFFFF" TextGlowColor="#FFFFFF11" TextGlowRadius="0.1" AnimationToPlayOnBegin="FontDefaultAnimation" FontSize="36">
        <BrushLayer Name="Default" FontColor="#FFFFFFFF" />
      </Style>
      <Style Name="Hovered" FontColor="#F3C697FF" TextGlowColor="#F3C69711" AnimationToPlayOnBegin="FontHoverAnimation">
        <BrushLayer Name="HoverLayer" FontColor="#F3C697FF" />
      </Style>
      <Style Name="Pressed" FontColor="#B57F5CFF" TextGlowColor="#B57F5C11" AnimationToPlayOnBegin="FontPressedAnimation">
        <BrushLayer Name="Default" />
      </Style>
      <Style Name="Disabled" TextGlowColor="#00000000" TextAlphaFactor="0.35">
        <BrushLayer Name="Default" />
      </Style>
    </Styles>
    <SoundProperties>
      <StateSounds>
      </StateSounds>
      <EventSounds>
        <EventSound EventName="Click" Audio="default" />
      </EventSounds>
    </SoundProperties>
  </Brush>
  <Brush Name="HoverIndicatorBrush" FontColor="#FFFFFFFF">
    <Layers>
      <BrushLayer Name="Default" IsHidden="true" />
      <BrushLayer Name="HoverLayer" IsHidden="true" Sprite="InitialMenu\hover_indicator" />
    </Layers>
    <Styles>
      <Style Name="Default" FontSize="36">
        <BrushLayer Name="Default" IsHidden="true" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" IsHidden="true" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="HoverLayer" IsHidden="false" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="HoverLayer" IsHidden="false" ColorFactor="0.3" />
      </Style>
    </Styles>
  </Brush>
  <Brush Name="HoverIndicatorBrushFlipped" FontColor="#FFFFFFFF">
    <Layers>
      <BrushLayer Name="Default" HorizontalFlip="true" IsHidden="true" />
      <BrushLayer Name="HoverLayer" HorizontalFlip="true" IsHidden="true" Sprite="InitialMenu\hover_indicator" />
    </Layers>
    <Styles>
      <Style Name="Default" FontSize="36">
        <BrushLayer Name="Default" IsHidden="true" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="HoverLayer" IsHidden="false" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="HoverLayer" IsHidden="false" ColorFactor="0.3" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" IsHidden="true" />
      </Style>
    </Styles>
  </Brush>
</Brushes>