<Brushes>
  <Brush Name="EncounterAttackerPageButton" FontColor="#FAF4DEFF">
    <Layers>
      <BrushLayer Name="Default" Sprite="StdAssets\arrow_pointing_left" Color="#FFFFFFFF" />
    </Layers>
    <Styles>
      <Style Name="Default" FontColor="#FAF4DEFF" TextOutlineColor="#FAF4DEFF">
        <BrushLayer Name="Default" ColorFactor="1.0" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.5" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.85" />
      </Style>
    </Styles>
  </Brush>
  <Brush Name="EncounterDefenderPageButton" FontColor="#FAF4DEFF">
    <Layers>
      <BrushLayer Name="Default" Sprite="StdAssets\arrow_pointing_left" Color="#FFFFFFFF" HorizontalFlip="true" />
    </Layers>
    <Styles>
      <Style Name="Default" FontColor="#FAF4DEFF" TextOutlineColor="#FAF4DEFF" HorizontalFlip="true">
        <BrushLayer Name="Default" ColorFactor="1.0" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.5" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.85" />
      </Style>
    </Styles>
  </Brush>
  <Brush Name="EncounterTextBrush" Font="ProximaNovaCond-Light">
    <Styles>
      <Style Name="Default" FontColor="#FFFFFFff" TextGlowColor="#e4e4e4FF" TextOutlineColor="#FFFFFFFF" TextOutlineAmount="0" TextGlowRadius="0" TextBlur="0" FontSize="20" />
    </Styles>
  </Brush>
</Brushes>