  <Brush Name="MP.ChatLog.Filter.Button">
    <Layers>
      <BrushLayer Name="Default" Sprite="mp_chat_textbox_9"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" ColorFactor="1.0" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.5" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.85" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" ColorFactor="0.2" />
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" ColorFactor="3" />
