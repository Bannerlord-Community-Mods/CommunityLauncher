<Window>
	<Widget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "StretchToParent">
		<Children>
			<!--_____Left Side Panel_______-->
			
			<!--_____//Left Side Panel_______-->
			
			<!--_____Right Side Panel_______-->
			<Widget Id="ModuleList" WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedHeight = "700" SuggestedWidth = "920" PositionYOffset = "180" HorizontalAlignment = "Right" Sprite="frame_002">
				<Children>
					<ScrollbarWidget Id = "ModuleListScrollbar" AlignmentAxis = "Vertical" WidthSizePolicy = "Fixed" HeightSizePolicy = "StretchToParent" SuggestedWidth = "80" Sprite="scrollbar_bg" MinValue = "0" MaxValue = "100" Handle = "MyHandle">
						<Children>
							<Widget Id="MyHandle" WidthSizePolicy = "StretchToParent" HeightSizePolicy = "Fixed" SuggestedHeight = "100" HorizontalAlignment = "Left" VerticalAlignment = "Top" Sprite="scrollbar_thumb"/>
						</Children>
					</ScrollbarWidget>
					<ScrollablePanel ClipRect="MyClipRect"  InnerPanel = "MyClipRect\ModulesPanel" VerticalScrollbar = "..\ModuleListScrollbar" WidthSizePolicy = "Fixed" HeightSizePolicy = "StretchToParent" SuggestedWidth = "800" PositionXOffset = "120" HorizontalAlignment = "Left" VerticalAlignment = "Center" ClipContents = "true">
						<Children>	
							<Widget Id="MyClipRect" WidthSizePolicy = "StretchToParent" HeightSizePolicy = "StretchToParent">					
								<Children>	
									<ListPanel DataSource = "{Modules}" Id="ModulesPanel" LayoutImp.LayoutMethod = "VerticalBottomToTop" WidthSizePolicy = "CoverChildren" HeightSizePolicy = "CoverChildren" >
										<ItemTemplate>		
											<Widget WidthSizePolicy = "CoverChildren" HeightSizePolicy = "CoverChildren" HorizontalAlignment = "Left" VerticalAlignment = "Top" Sprite="scrollbar_bg">
												<Children>					
													<Widget WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth = "300" SuggestedHeight = "150" HorizontalAlignment = "Left" VerticalAlignment = "Top" >
														<Children>		
															<ButtonWidget ButtonType = "Toggle" DoNotPassEventsToChildren="true" ToggleIndicator="ToggleIndicator1" PositionXOffset = "50" VerticalAlignment="Top" WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth = "50" SuggestedHeight = "50" Brush = "CheckBox" IsDisabled="@IsDisabled" IsSelected="@IsSelected">
																<Children>	
																	<Widget Id="ToggleIndicator1" DoNotPassEventsToChildren="true"  SuggestedWidth = "50" SuggestedHeight = "50" WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" Sprite="checkbox_selected"/>		
																</Children>
															</ButtonWidget>		
															<ButtonWidget Command.Click = "ExecuteIncrementLoadingOrder" IsHidden="@CannotIncreaseLoadingOrder" DoNotPassEventsToChildren="true" VerticalAlignment="Top" HorizontalAlignment="Left" WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth = "50" SuggestedHeight = "50" Brush = "ArrowUp"/>	
															<ButtonWidget Command.Click = "ExecuteDecrementLoadingOrder" IsHidden="@CannotDecreaseLoadingOrder" DoNotPassEventsToChildren="true" PositionYOffset = "50"  VerticalAlignment="Top" HorizontalAlignment="Left" WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth = "50" SuggestedHeight = "50" Brush = "ArrowDown"/>	
															<TextWidget SuggestedHeight = "50" VerticalAlignment="Top" HorizontalAlignment="Right" WidthSizePolicy = "StretchToParent" HeightSizePolicy = "Fixed" Text="@Name"/>	
															<TextWidget PositionYOffset="50" VerticalAlignment="Top" HorizontalAlignment="Right" WidthSizePolicy = "StretchToParent" HeightSizePolicy = "StretchToParent" Text="@RequirmentsText"/>	
														</Children>	
													</Widget>
													<!--Widget Id="dsa" WidthSizePolicy = "CoverChildren" HeightSizePolicy = "CoverChildren" PositionXOffset = "100" PositionYOffset = "100" -->
														<ListPanel DataSource = "{SubModules}" LayoutImp.LayoutMethod = "VerticalBottomToTop" WidthSizePolicy = "Fixed" HeightSizePolicy = "CoverChildren"  VerticalAlignment = "Bottom" HorizontalAlignment="Left" SuggestedWidth="725" PositionXOffset="75">
															<ItemTemplate>			
																<Widget WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth = "600" SuggestedHeight = "50" HorizontalAlignment="Right" >
																	<Children>
																		<TextWidget SuggestedWidth = "600" SuggestedHeight = "50" WidthSizePolicy = "Fixed" HorizontalAlignment="Right" HeightSizePolicy = "Fixed" Text="@Name"/>	
																	</Children>
																</Widget>
															</ItemTemplate>
														</ListPanel>
													<!--/Widget-->				
													<Widget WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth = "300" SuggestedHeight = "250" HorizontalAlignment = "Left" VerticalAlignment = "Bottom" />
												</Children>
											</Widget>			
										</ItemTemplate>
									</ListPanel>
								</Children>
							</Widget>		
						</Children>
					</ScrollablePanel>
				</Children>
			</Widget>	
			<!--_____//Right Side Panel_______-->
	
			<!--_____Play Side Panel_______-->
			<ButtonWidget DoNotPassEventsToChildren="true" Command.Click="ExecuteStartGame" WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth = "920" SuggestedHeight = "200" HorizontalAlignment = "Right" VerticalAlignment = "Bottom" Brush = "CheckBox">
				<Children>
					<TextWidget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "StretchToParent" Text="@StartText" HorizontalAlignment = "Center" VerticalAlignment = "Center" />
				</Children>
			</ButtonWidget>
			<!--_____//Play Side Panel_______-->

			<Widget Id="Banner" WidthSizePolicy = "StretchToParent" HeightSizePolicy = "Fixed" SuggestedHeight = "180" HorizontalAlignment = "Center" VerticalAlignment="Top" Sprite="banner"/>
			
		</Children>
	</Widget>
</Window>